{
    "description": "Weak SSL Policy",
    "rationale": "Encryption protects confidential data when transmitted over untrusted network connections.",
    "remediation": "Ensure no HTTPS or SSL proxy load balancers permit SSL policies with weak cipher suites.",
    "references": [
        "https://github.com/appdefensealliance/ASA-WG/blob/main/Cloud%20App%20and%20Config%20Profile/Cloud%20App%20and%20Config%20Specification.md#audit-37",
        "https://cloud.google.com/load-balancing/docs/use-ssl-policies"
    ],
    "compliance": [
        {
            "name": "App Defense Alliance Cloud Profile",
            "version": "1.0",
            "reference": "4.1.1"
        }
    ],
    "dashboard_name": "Policies",
    "path": "computeengine.projects.id.ssl_policies.id",
    "conditions": [
        "or",
        [
            "computeengine.projects.id.ssl_policies.id.profile",
            "equal",
            "COMPATIBLE"
        ],
        [
            "computeengine.projects.id.ssl_policies.id.minTlsVersion",
            "containAtLeastOneOf",
            ["TLS_1_0", "TLS_1_1"]
        ]
    ],
    "id_suffix": "ssl_policies"
}